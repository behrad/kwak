<ul id="channel-list" class="list-group">
  {{#each channel in model itemController="channels.subscribe"}}
    <li {{bind-attr class=":list-group-item"}}>
      {{view "select" classNames="colorselector" content=colors value=channel.color optionValuePath="content.id" optionLabelPath="content.name" code="content.code"}}
      <label>
        {{input type="checkbox" checked=channel.subscribed}} {{channel.name}}
      </label>
    </li>
  {{/each}}
    <li class="list-group-item">
      {{view "select" classNames="colorselector" content=colors optionValuePath="content.id" optionLabelPath="content.name" value=color}}
      {{input action="createChannel" class="channel-create" value=name}}
      {{#if hasMultipleTeams}}
        {{view "select" content=teams optionValuePath="content.id" optionLabelPath="content.name" value=selectedTeam}}
      {{/if}}
    </li>
</ul>

{{outlet}}
