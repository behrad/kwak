<footer class="row feedback">
  <div class="col-xs-12">
    {{#if sent}}
    <div class="jumbotron">
      <h1>Thanks a lot!</h1>
      <h3>We'll get back to you shortly.</h3>
    </div>
    {{else}}
    <form {{action 'sendFeedback' on='submit' id='messageform'}}>
      <div class="input-group input-group-lg">
        {{input readonly="readonly" id="channel-select" class="form-control" value=currentUser.content.email}}
        <span class="input-group-addon glyphicon glyphicon-chevron-right" id="addon-chevron-right"></span>
        <span class="form-control" id="pm-penpal">Feedback <small class="text-muted">(feedback@kwak.io)</small></span>
      </div>
      <div class="form-group">
        {{textarea id="messagebox" class="form-control" rows="10" value=feedbackMessage}}
      </div>
      <button class="btn btn-primary">Send feedback</button>
    </form>
    {{/if}}
  </div>
</footer>
