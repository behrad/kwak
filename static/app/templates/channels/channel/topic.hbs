<div class="message-list">
  {{#each message in model.messages}}
  <div class="row message">
    <div class="col-md-12">
      <div class="message-header">
        <span class="topic-title">{{#link-to 'channels.channel.topic' message.topic.channel.id message.topic.channel.name message.topic.id message.topic.title}}{{message.topic.title}}{{/link-to}}</span>
        <small class="pull-right text-muted">
          {{format-date message.pubdate}}
        </small>
      </div>
      <div class="message-body">
        <h5>{{message.author.name}}</h5>
        {{{message.contentHtml}}}
      </div>
    </div>
  </div>
  {{/each}}
</div>

<footer class="row">
  <div class="col-xs-12">
    <form {{action 'createMessage' on='submit' id='messageform'}}>
      <div class="input-group input-group-lg">
        <span class="input-group-addon">{{channel.name}}&nbsp;Â»</span>
        {{input type="text" id="topic" value=topicTitle placeholder="topic" class="form-control"}}
      </div>
      <div class="form-group">
        {{message-box id="messagebox" class="form-control" value=message}}
      </div>
    </form>
  </div>
</footer>
