<div class="row">
  <aside class="channels col-md-2 col-sm-2 hidden-xs">
    <div class="affix" data-spy="affix">
      <div class="row">
        {{#link-to 'channels.subscribe'}}
        <div class="col-xs-12"><i class="glyphicon glyphicon-tags subscribe-icon pull-left"></i><hr style="margin-top: 10px"></div>
        {{/link-to}}
      </div>
      <ul class="nav nav-pills nav-stacked">
      {{#each channel in controller.subscribed}}
        {{#link-to 'channels.channel' channel.id channel.name tagName="li" href=false}}<a {{bind-attr href="view.href"}}><i class="glyphicon glyphicon-tag"></i> {{channel.name}}</a>{{/link-to}}
      {{/each}}
      </ul>
    </div>
  </aside>
  <div class="col-md-10 col-sm-10 col-xs-12">
    {{outlet}}
  </div>
</div>
