<div class="container-fluid">
  <div class="row">
    <aside class="channels col-md-1 col-sm-2 hidden-xs">
      <ul class="nav nav-pills nav-stacked">
      {{#each channel in channels}}
        {{#link-to 'channels.channel' channel.id channel.name tagName="li" href=false}}<a {{bind-attr href="view.href"}}>{{channel.name}}</a>{{/link-to}}
      {{/each}}
      </ul>
    </aside>
    <div class="col-md-11 col-sm-10 col-xs-12">
      {{outlet}}
    </div>
  </div>
</div>

  $('#messagebox').keypress(function(e){
    if(e.which == 13){
      $('form').submit();
    }
  });
